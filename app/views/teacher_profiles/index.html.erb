

<h1>Choose a teacher!</h1>

<div id="teacher_profiles">
<table>
  <thead>
    <tr>
      <th>Name </th>
      <th>Bio</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @teachers.each do |teacher| %>
    <tr>
      <td><a href='#'><%= teacher.teacher_profile.name %></a></td>
      <td><%= teacher.teacher_profile.bio %></td>
      <% if teacher == current_teacher %>
      <td><%= link_to 'Edit My Profile', edit_teacher_profile_path(teacher.teacher_profile) %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
