

<h1>Choose a teacher!</h1>

<div id="teacher_profiles">
<table>
  <thead>
    <tr>
      <th>Name </th>
      <th>Bio</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @teacher_profiles.each do |profile| %>
    <tr>
      <td><a href='#'><%= profile.name %></a></td>
      <td><%= profile.bio %></td>
      <% if profile.teacher == current_teacher %>
      <td><%= link_to 'Edit My Profile', edit_teacher_profile_path(profile) %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
