= stylesheet_link_tag 'application', media: 'all'
= javascript_include_tag 'application'
= csrf_meta_tags
%body
  %nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
    .container-fluid
      .navbar-header
        %button.navbar-toggle{"data-target" => "#navbar-collapse-main", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only
            Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{:href => "/"}
          ETL
      .collapse.navbar-collapse#navbar-collapse-main
        %ul.nav.navbar-nav.navbar-right
          %li
            %a{:href => "#why_us"}
              Why Us
          %li
            %a{:href => "#services"}
              Services
          %li
            %a{:href => "#pricing"}
              Pricing
          - if student_signed_in?
            Welcome, #{current_student.email}
            %li
              = link_to "Log out", destroy_student_session_path(protocol: "https"), method: :delete
          - elsif teacher_signed_in?
            %li
              = link_to "Log out", destroy_teacher_session_path(protocol: "https"), method: :delete
          - else
            %li
              %a{:href => "students/sign_in", 'data-toggle' => 'modal', 'data-target' => '#myModal'}
                Student Sign In
            %li
              %a{:href => "/teachers/sign_in", 'data-toggle' => 'modal', 'data-target' => '#myModal'}
                Teacher Sign In

        = yield
