.container
  .row
    .col-md-6.col-md-offset-3
      %h1 Add class
      = form_for(@class) do |f|
        - if @class.errors.any?
          #error_explanation
            %h2
              = pluralize(@class.errors.count, "error")
              prohibited this class from being saved:
            %ul
              - @class.errors.full_messages.each do |msg|
                %li= msg
        .form-group
          = f.label :date
          = f.date_field :date, class: "form-control"
          = f.label :link
          = f.text_field :link, class: "form-control"
        .form-group
          = f.submit class: "btn btn-primary"
